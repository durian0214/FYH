<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_return_times"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="期数"/>
    <TextView
        android:id="@+id/tv_pay_date"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_return_times"
        android:text="应付款日"/>
    <TextView
        android:id="@+id/tv_payments"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_pay_date"
        android:text="应缴纳费用"/>
    <TextView
        android:id="@+id/tv_curtDuring"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_payments"
        android:text="房屋租金期间"/>
    <TextView
        android:id="@+id/tv_pay_status"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_toRightOf="@id/tv_curtDuring"
        android:text="付款状态"/>
</LinearLayout>