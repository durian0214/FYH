<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_reservation_see_house_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NAME"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <EditText
            android:id="@+id/edt_reservation_see_house_name"
            android:layout_width="match_parent"
            android:lines="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_reservation_see_house_name"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_reservation_see_house_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/PHONE"
            android:layout_alignParentLeft="true"/>
        <EditText
            android:id="@+id/edt_reservation_see_house_phone"
            android:layout_width="match_parent"
            android:lines="1"
            android:layout_centerVertical="true"
            android:maxLength="11"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_reservation_see_house_phone"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_reservation_see_house_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/REMARK"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/edt_reservation_see_house_remark"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_reservation_see_house_remark"
            android:layout_height="200dp"
            android:maxLength="200"
            android:gravity="start"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_reservation_see_house_submit"
        android:layout_width="match_parent"
        android:text="@string/SUBMIT"
        android:textColor="@color/tvWhite"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_button_theme"
        android:layout_height="wrap_content" />
</LinearLayout>