<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cv_item_apartment_room_detail_neighbor"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_item_apartment_room_neihgbor"
            android:layout_width="48dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_height="48dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_toRightOf="@id/img_item_apartment_room_neihgbor"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_apartment_room_neighbor_room_nub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#252525"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_item_apartment_room_neighbor_status"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#252525"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_item_apartment_room_neighbor_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#252525"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_item_apartment_room_neighbor_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#252525"
                android:gravity="center"
                android:layout_weight="3"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>