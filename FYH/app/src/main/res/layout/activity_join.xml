<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_community_name"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:text="小区名称"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_community_name"
        android:layout_toRightOf="@+id/tv_community_name"
        android:layout_width="match_parent"
        android:hint="请输入小区名称"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/tv_join_name"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:text="姓名"
        android:layout_height="wrap_content" />

        <EditText
        android:id="@+id/edt_join_name"
            android:layout_toRightOf="@+id/tv_join_name"
        android:layout_width="match_parent"
        android:hint="请输入姓名"
        android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/tv_join_cellphone"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:text="手机"
        android:layout_height="wrap_content" />

        <EditText
        android:id="@+id/edt_join_cellphone"
        android:layout_toRightOf="@+id/tv_join_cellphone"
        android:layout_width="match_parent"
        android:hint="请输入手机号码"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_join_code"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:hint="请输入验证码"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_join_getcode"
            android:layout_width="wrap_content"
            android:text="获取验证码"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:text="委托提交"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
</LinearLayout>