<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/tv_item_apartment_detail_name"
    android:layout_width="wrap_content"
    android:text=""
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_apartment_detail_context"
        android:layout_width="match_parent"
        android:text=""
        android:layout_below="@id/tv_item_apartment_detail_name"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_apartment_detail_address"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_item_apartment_detail_context"
        android:layout_alignParentLeft="true"
        android:text=""
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_apartment_detail_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_item_apartment_detail_address"
        android:layout_alignBottom="@id/tv_item_apartment_detail_address"/>
</RelativeLayout>