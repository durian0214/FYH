<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_release_house_list_add"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_item_release_house_list"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="fitXY"
            android:layout_marginRight="8dp"
            android:src="@drawable/house_icon" />

        <TextView
            android:id="@+id/tv_item_release_house_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/img_item_release_house_list"
            android:lines="1" />

        <RelativeLayout
            android:id="@+id/rl_item_release_house_list_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_item_release_house_list"
            android:layout_toRightOf="@id/img_item_release_house_list">

            <Button
                android:id="@+id/btn_item_release_house_list_edit"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_button"
                android:layout_marginLeft="8dp"
                android:textColor="@color/tvWhite"
                android:text="@string/EDIT"
                android:drawableStart="@drawable/edit"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_item_release_house_list_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:drawableStart="@drawable/release"
                android:text="@string/RELEASE"
                android:textColor="@color/tvWhite"
                android:layout_toLeftOf="@id/btn_item_release_house_list_edit" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_release_house_list_price"
            android:layout_width="match_parent"
            android:text=""
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_below="@id/tv_item_release_house_list_name"
            android:layout_above="@id/rl_item_release_house_list_btn"
            android:layout_toRightOf="@id/img_item_release_house_list"
            android:lines="1" />
    </RelativeLayout>
</android.support.v7.widget.CardView>