<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/img_bar_back"
        android:background="@drawable/back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/sp_bar_fragment"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/img_bar_back"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_bar_logo"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/home_logo"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_bar_fragment"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_toRightOf="@id/img_bar_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:id="@+id/edt_bar_fragment"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/img_bar_right"
        android:layout_toRightOf="@id/img_bar_back"
        android:layout_height="wrap_content"
        android:lines="1"/>
</RelativeLayout>