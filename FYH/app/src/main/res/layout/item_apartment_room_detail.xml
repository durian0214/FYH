<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_apartment_room_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/myBackground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="21dp">

        <TextView
            android:id="@+id/tv_item_apartment_room_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textColor="@color/tvBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_apartment_room_detail_paymet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_apartment_room_detail_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:text=""
            android:textColor="@color/myTheme"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_item_apartment_room_detail_paymet_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_item_apartment_room_detail_paymet"
            android:layout_toRightOf="@id/tv_item_apartment_room_detail_paymet"
            android:text=""
            android:textColor="#808080"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_item_apartment_room_detail_line"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/tv_item_apartment_room_detail_paymet"
            android:layout_marginTop="8dp"
            android:background="#9c9c9c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_apartment_room_detail_line"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_item_apartment_room_detail_room_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#9c9c9c" />

            <TextView
                android:id="@+id/tv_item_apartment_room_detail_room_floor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#9c9c9c" />

            <TextView
                android:id="@+id/tv_item_apartment_room_detail_door_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="150"
                android:gravity="center"
                android:textColor="#3a3a3a"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/tv_item_apartment_room_detail_paymet"
        android:layout_marginTop="8dp"
        android:background="@color/myBackground" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_apartment_room_detail_configuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>