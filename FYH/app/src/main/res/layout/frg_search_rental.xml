<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_search_rental1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_search_rental"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <include
            android:id="@+id/layout_search_rental2"
            layout="@layout/view_search_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_search_item_button"
            android:layout_below="@id/recycler_search_rental"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/space_search_rental"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/layout_search_rental2" />
    </RelativeLayout>

    <View
        android:id="@+id/view_search_rental_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_search_rental1"
        android:background="@color/color_search_shade" />
</RelativeLayout>
