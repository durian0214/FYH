<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search_style2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_search_item_button"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_searchstyle_reset"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/bg_search_negative"
        android:text="@string/str_search_reset" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_searchstyle_ok"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@drawable/bg_search_positive"
        android:text="@string/str_search_ok" />
</LinearLayout>

