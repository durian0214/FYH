<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_account_info_account_lable"
        android:layout_width="wrap_content"
        android:text="@string/ACCOUNT"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/tv_account_info_account"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/tv_account_info_account_lable"
        android:gravity="right"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_account_info_mobile"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_account_info_mobile_lable"
            android:layout_width="wrap_content"
            android:text="@string/ACCOUNT"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/img_account_info_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_account_info_mobile"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_account_info_mobile"
            android:layout_toRightOf="@id/tv_account_info_mobile_lable"
            android:gravity="right"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</LinearLayout>